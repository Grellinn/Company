@model IEnumerable<Company.Models.Expense>

@{
    ViewBag.Title = "Yfirlit yfir gjöld";
}

<h2>Yfirlit yfir gjöld</h2>

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title">Gjöld</span>
    </div>
    <div class="panel-body">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title">Yfirlit yfir gjöld</span>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Registered)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Title, "Details/" + item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Registered)
                    </td>
                    <td>
                        @Html.ActionLink(item.Project.Title, "Details/" + item.ProjectID, "Project")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


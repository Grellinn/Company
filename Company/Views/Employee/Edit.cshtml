@model Company.Models.Employee

@{
    ViewBag.Title = "Breyta starfsmanni";
}


<div class="panel">
    <div class="panel-heading">
        <span class="panel-title">Breyta starfsmanni</span>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)

                <div class="form-group">
                    <p class="control-label col-md-2">Nafn</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Staða innan fyrirtækis</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Role)
                        @Html.ValidationMessageFor(model => model.Role)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Heimilisfang</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Address)
                        @Html.ValidationMessageFor(model => model.Address)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Sími</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Phone)
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Tölvupóstur</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Hóf störf</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Started)
                        @Html.ValidationMessageFor(model => model.Started)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Lauk störfum</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Quit)
                        @Html.ValidationMessageFor(model => model.Quit)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Kennitala</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SSN)
                        @Html.ValidationMessageFor(model => model.SSN)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Bankareikningur</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AccountNr)
                        @Html.ValidationMessageFor(model => model.AccountNr)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Tímakaup</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.WPH)
                        @Html.ValidationMessageFor(model => model.WPH)
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Upplýsingar</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Details)
                        @Html.ValidationMessageFor(model => model.Details)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Uppfæra" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Til baka í lista", "Index")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model PagedList.IPagedList<Company.Models.Employee>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Starfsmenn";
}

<div class="page-header">
    <div class="row">
        <!-- Page header, center on small screens -->
        <h1 class="col-xs-12 col-sm-4 text-left-sm"><i class="fa fa-users page-header-icon"></i>&nbsp;&nbsp;Starfsmenn</h1>

        <div class="col-xs-12 col-sm-8">
            <div class="row">
                <hr class="visible-xs no-grid-gutter-h">
                <!-- "Create project" button, width=auto on desktops -->
                <div class="pull-right col-xs-12 col-sm-auto">
                    <a href="/Employee/Create" class="btn btn-primary btn-labeled" style="width: 100%;"><span class="btn-label icon fa fa-plus"></span>Skrá nýjan starfsmann</a>
                </div>

                <!-- Margin -->
                <div class="visible-xs clearfix form-group-margin"></div>

                <!-- Search field -->
                @using (Html.BeginForm("Index", "Employee", FormMethod.Get, new { @class = "pull-right col-xs-12 col-sm-6" }))
                {
                    <div class="input-group no-margin">
                        <span class="input-group-addon" style="border:none;background: #fff;background: rgba(0,0,0,.05);"><i class="fa fa-search"></i></span>
                        <input type="text" name="SearchString" placeholder="Leita af starfsmanni..." value="@ViewBag.CurrentFilter" class="Search search-query form-control no-padding-hr" style="border:none;background: #fff;min-width:100%;background: rgba(0,0,0,.05);">
                    </div>
                }
            </div>
        </div>
    </div>
</div> <!-- / .page-header -->

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title">
            Viðskiptavinir
        </span>
    </div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink("Nafn", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Staða", "Index", new { sortOrder = ViewBag.RoleSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Heimilisfang", "Index", new { sortOrder = ViewBag.AddressSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Sími", "Index", new { sortOrder = ViewBag.PhoneSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Tölvupóstur", "Index", new { sortOrder = ViewBag.EmailSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        @Html.ActionLink("Upplýsingar", "Index", new { sortOrder = ViewBag.InfoSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(employee.Name, "Details/" + employee.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => employee.Role)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => employee.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => employee.Phone)
                        </td>
                        <td>
                            <a href="mailto:client.Email" target="_top">@Html.DisplayFor(modelItem => employee.Email)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => employee.Details)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <br />
        Bls @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) af @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>
</div>
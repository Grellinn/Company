@model Company.Models.Client

@{
    ViewBag.Title = "Skrá nýjan";
}

<h2>Skrá nýjan</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Viðskiptavin</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <p class="control-label col-md-2">Nafn</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Heimilisfang</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Sími</p>
            <div class="col-md-10">
                <input type="tel" name="Phone" />
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Tölvupóstur</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Fyrirtæki</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Company)
                @Html.ValidationMessageFor(model => model.Company)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Stofna" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Til baka í lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

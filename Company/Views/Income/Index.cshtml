@model IEnumerable<Company.Models.Income>

@{
    ViewBag.Title = "Index";
}

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title">Tekjur</span>
    </div>
    <div class="panel-body">
        @Html.ActionLink("Skrá tekjur", "Create", null, new { @class = "btn btn-primary pull-right" })
    </div>
</div>

<div class="panel">
    <div class="panel-heading">
        <span class="panel-title">Tekjur</span>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Registered)
                </th>
                <th>
                    Viðskiptavinur
                </th>
                <th>
                    Verkefni
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Title, "Details/" + item.ID, "Income")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Registered)
                    </td>
                    <td>
                        @Html.ActionLink(item.Project.Client.Name, "Details/" + item.Project.ClientID, "Client")
                    </td>
                    <td>
                        @Html.ActionLink(item.Project.Title, "Details/" + item.ProjectID, "Project")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



